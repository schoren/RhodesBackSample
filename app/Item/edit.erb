<div class="pageTitle">
  <h1>Edit <%= @item.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @item.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @item.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @item.object %>"/>
    <ul>
      
          <li>
            <label for="item[name]" class="fieldLabel">Name</label>
            <input type="text" name="item[name]" value="<%= @item.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
          <li>
            <label for="item[code]" class="fieldLabel">Code</label>
            <input type="text" name="item[code]" value="<%= @item.code %>" <%= placeholder( "Code" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>