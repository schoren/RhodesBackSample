<div class="pageTitle">
  <h1>New <%= @item.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @item.object %>"/>
    <ul>
      
          <li>
            <label for="item[name]" class="fieldLabel">Name</label>
            <input type="text" name="item[name]" <%=
            placeholder("Name") %> />
          </li>
      
          <li>
            <label for="item[code]" class="fieldLabel">Code</label>
            <input type="text" name="item[code]" <%=
            placeholder("Code") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>